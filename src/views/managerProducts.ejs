<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Comatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="http://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Manager</title>
</head>
<body>
    <section class="top">
        <div class="container">
            <div class="row justify-content">
                <div class="logo"><a href="/"><img src="/images/logo.png" alt="Logo"></a></div>
                <div class="menu-bar">
                    <span></span>
                </div>
                <div class="menu-items">
                    <ul>
                        <li class="menu-item">
                            <i class='bx bxs-home'></i>
                            <a href="/">Home</a>
                        </li>
                        <li class="menu-item">
                            <i class='bx bx-package' ></i>
                            <a href="/managerProducts">Products</a>
                        </li>
                        <li class="menu-item">
                            <i class='bx bx-archive-in'></i>
                            <a href="/managerInputs">Inputs</a>
                        </li>
                        <li class="menu-item">
                            <i class='bx bx-archive-out' ></i>
                            <a href="/managerOutputs">Outputs</a>
                        </li>
                        <li class="menu-item">
                            <i class='bx bx-log-out' ></i>
                            <a href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section class="big-image">
        <div class="wrapper2">
            <div class="wrapper2Content">
                <form action="/postCreateProduct" method="post">
                    <div class="close">
                        <i class='bx bx-x-circle'></i>
                    </div>
                    <h1>New</h1>
                    <div class="input-box">
                        <input type="text" name="nameCreate" placeholder="Name" required>
                    </div>
                    <div class="input-box">
                        <input type="text" name="codeCreate" placeholder="Code" required>
                    </div>
                    <div class="input-box">
                        <input type="text" name="categoryCreate" placeholder="Category" required>
                    </div>
                    <div class="input-box">
                        <input type="text" name="quantityCreate" placeholder="Quantity" required>
                    </div>
                    <div class="input-box">
                        <input type="text" name="descriptionCreate" placeholder="Descripttion" required>
                    </div>
                    <button type="submit" class="btn">Create</button>
                </form>
            </div>
        </div>
        <div class="big-image-content">
            <div class="table">
                <section class="table__header">
                    <button class="btn-create"></button>
                    <h1>Welcome: <%= manager.name%> - <%= manager.id%></h1>
                    <h1>Products List</h1>
                    <div class="input-group">
                        <input type="search" placeholder="Search Data...">
                        <img src="images/search.png" alt="">
                    </div>
                </section>
                <section class="table__body">
                    <table>
                        <thead>
                            <tr>
                                <th> Id <span class="icon-arrow">&UpArrow;</span></th>
                                <th> Name <span class="icon-arrow">&UpArrow;</span></th>
                                <th> Code <span class="icon-arrow">&UpArrow;</span></th>
                                <th> Category <span class="icon-arrow">&UpArrow;</span></th>
                                <th> Quantity <span class="icon-arrow">&UpArrow;</span></th>
                                <th> Description <span class="icon-arrow">&UpArrow;</span></th>
                                <th> Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                        <% listProducts.forEach(function(product) { %>
                            <tr>
                                <td><%= product.id %></td>
                                <td><%= product.name %></td>
                                <td><%= product.code %></td>
                                <td><%= product.category %></td>
                                <td><%= product.quantity %></td>
                                <td><%= product.description %></td>
                                <td class="actions">
                                    <button class="btn-edit" data-id="<%= product.id %>"></button>
                                    <form action="/postDeleteProduct/<%= product.id %>" method="post">
                                        <button class="btn-info"></button>
                                    </form>
                                </td>
                            </tr>
                            <div class="wrapper3" id="edit<%= product.id %>">
                                <div class="wrapper3Content">
                                    <form action="/postEditProduct" method="post" class="editForm">
                                        <div class="close" id="close<%= product.id %>">
                                            <i class='bx bx-x-circle'></i>
                                        </div>
                                        <h1>Edit</h1>
                                        <div class="input-box d-none">
                                            <input type="text" name="idEdit" value="<%= product.id %>" placeholder="Id" required>
                                        </div>
                                        <div class="input-box">
                                            <input type="text" name="nameEdit" value="<%= product.name %>" placeholder="Name" required>
                                        </div>
                                        <div class="input-box">
                                            <input type="text" name="codeEdit" value="<%= product.code %>" placeholder="Code" required>
                                        </div>
                                        <div class="input-box">
                                            <input type="text" name="categoryEdit" value="<%= product.category %>" placeholder="Category" required>
                                        </div>
                                        <div class="input-box">
                                            <input type="text" name="quantityEdit" value="<%= product.quantity %>" placeholder="Quantity" required>
                                        </div>
                                        <div class="input-box">
                                            <input type="text" name="descriptionEdit" value="<%= product.description %>" placeholder="Description" required>
                                        </div>
                                        <button type="submit" class="btn">Update</button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>   
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </section>
    <script src="/js/script.js"></script>
</body>
</html>